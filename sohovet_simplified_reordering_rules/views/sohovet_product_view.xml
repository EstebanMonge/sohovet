<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="action_open_orderpoint" model="ir.actions.act_window">
            <field name="name">Importar productos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.warehouse.orderpoint</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="sohovet_warehouse_orderpoint_editable_tree"/>
            <field name="target">current</field>
            <field name="context">{'default_product_id': active_id}</field>
            <field name="domain">[('product_id', '=', active_id)]</field>
        </record>

        <record id="sohovet_product_template_only_form_view" model="ir.ui.view">
            <field name="name">product.template.form </field>
            <field name="model">product.template</field>
            <field name="priority">100</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <button name="action_view_orderpoints" position="attributes">
                    <attribute name="type">action</attribute>
                    <attribute name="name">sohovet_simplified_reordering_rules.action_open_orderpoint</attribute>
                </button>
            </field>
        </record>
    </data>
</openerp>